#include <iostream.h>
int main()
{
int n, i;
bool isPrime = true;
cout << "Enter a positive integer: ";
cin >> n;
for (i = 2; i <= n / 2; ++i)
{
If (n % i == 0)
{
isPrime = false;
break;
}
}
if (is Prime)
cout << "This is a prime number";
else
cout << "This is not a prime number";
return 0;
}






OUTPUT
Enter a positive integer: 29
This is a prime number.
